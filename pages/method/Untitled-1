                            var producto = $('#data1').text();
   var m2 = $('#data2').text();
   var costo = $('#data3').text();
   var tiempo = $('#data4').text();
   var fecha_entrega = $('#data5').text();
   var fecha_devolucion = $('#data6').text();
   var total = $('#data7').text();
   if(fecha_devolucion != '' && total != '')
   {
    $.ajax({
     url:"insert.php",
     method:"POST",
     data:{producto:producto, m2:m2, costo:costo, tiempo:tiempo, fecha_entrega:fecha_entrega, fecha_devolucion:fecha_devolucion, total:total },
     success:function(data)
     {
      $('#alert_message').html('<div class="alert alert-success">'+data+'</div>');
     }
    });
    setInterval(function(){
     $('#alert_message').html('');
    }, 5000);
   }
   else
   {
    alert("Favor calcular antes de ingresar producto");
   }


   delimiter //
create PROCEDURE insertaDetalle(
    in id_proyecto int, 
    in producto varchar(20),
    in m2 float,
    in costo float,
    in tiempo float, 
    in fecha_entrega date,
    in fecha_devolucion date, 
    in total float)
    begin 
    declare cod_producto varchar(20);
    
    select producto_codigo into cod_producto from rmd_producto where producto_nombre = producto;
    
    insert into rmd_proyectodet values (id_proyecto, cod_producto, m2, costo, tiempo, fecha_entrega, fecha_devolucion, total);
end 
    
//


 delimiter // 
create procedure InsertarEncabezado(
    in id_proyecto int,
    in obra varchar(200),
    in cliente varchar(20),
    in estado varchar(50),
    in fecha_entrega date,
    in fecha_ingreso date,
    in fecha_primer date, 
    in tipo varchar(30),
    in vendedor varchar(200),
    in nombre_proyecto varchar(255))
    as
    begin 
    
    DECLARE rut_cliente varchar(15);
	DECLARE cod_estado int;
    DECLARE cod_obra int;
    DECLARE rut_vendedor varchar(15); 
    
    select cliente_rut into rut_cliente from rmd_cliente where cliente_nombre = cliente LIMIT 1;
    select estado_id into cod_estado from rmd_estado where estado_descripcion = estado LIMIT 1; 
    select obra_id into cod_obra from rmd_obra where obra_descripcion = obra LIMIT 1; 
    select usuario_rut into rut_vendedor from rmd_usuario  where usuario_nombre = vendedor LIMIT 1;
    
    INSERT INTO rmd_proyecto values (proyecto_id, rut_cliente, fecha_ingreso, fecha_entrega, fecha_primer, 
    
    
    end 
    
    //   